doctype html
html
  head
    title= tytul
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="stylesheets/font-awesome.min.css")
    link(rel="stylesheet" href="/stylesheets/jquery.mobile.min.css")
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/socket.io/socket.io.js')
    script(src='/javascripts/jquery.min.js')
    script(src='/javascripts/jquery.mobile.min.js')
    script(src='/javascripts/io.js')
  body
    #galleries(data-role='page' data-title="#{tytul}")
      .naglowek(data-role="header" data-theme="b" data-position="fixed" )
        h1.headerText= tytul

      .div(role="main" data-theme="b" class="ui-content")
        br
        #listaGalerii

      .stopka(data-role="footer" data-theme="b" data-position="fixed" )
        h4= opis

    #photographs(data-role='page' data-title="#{tytul}")
      .naglowek(data-role="header" data-theme="b" data-position="fixed")
        h1#photographsHeader.headerText= tytul

      div(role="main" data-theme="b" class="ui-content")
        #photosDiv(hidden)
          br
          h1#tytulGalerii Please choose a gallery
          br
          br
        #zdjecia
        br
        a.ui-btn.ui-btn-b.ui-corner-all.center#powrot(href="#galleries" data-role="button")
          i.fa.fa-arrow-up
      .stopka(data-role="footer" data-theme="b" data-position="fixed")
         h4= opis

    #bigSize(data-role='page' data-title="#{tytul}")

      div(role="main" data-theme="b" class="ui-content")
        #duzeZdjecieDiv(hidden)
          br
          h1#tytulZdjecia Please choose a gallery
        #bigPic
        br
        a.ui-btn.ui-btn-b.ui-corner-all.center#powrot2(href="#galleries" data-role="button")
          i.fa.fa-arrow-up
        #guziki
          .guzik
            a.ui-btn.ui-btn-b.ui-corner-all.center(id="prev" data-role="button" )
              i.fa.fa-arrow-left
          .guzik
            a.ui-btn.ui-btn-b.ui-corner-all.center(id="powrot3" href="#photographs" data-role="button" )
              i.fa.fa-arrow-up
          .guzik
            a.ui-btn.ui-btn-b.ui-corner-all.center(id="next" data-role="button" )
              i.fa.fa-arrow-right
